<%- include("../includes/header.ejs", {title: "Update " + band.band_name}); %>

<h1>Update <%= band.band_name%></h1>
<form action="/band/update" method="get">
    <input type="hidden" id="band_name" name="band_name" value="<%= band.band_name %>">


    Singer: <input id="singer" name="singer" type="text" value="<%= band.singer%>"/>
    <br />
    <br />

    Bassist: <input id="bassist" name="bassist" type="text" value="<%= band.bassist%>"/>
    <br />
    <br />

    Drummer: <input id="drummer" name="drummer" type="text" value="<%= band.drummer%>"/>
    <br />

    Guitarists <br />
    <select id="guitarist" name="guitarist" multiple="multiple">
        <% for(var i=0; guitarist.length > i; i++ ) {
            var selected = "";
            if(guitarist[i].band_name != null) {
                selected = "selected";
            }
        %>
        <option value="<%= guitarist[i].guitarist %>" <%= selected %> ><%= guitarist[i].guitarist %></option>
        <% } %>
    </select>
    </br>
    </br>





    <!-- Initialize the multiselect plugin: -->
    <script type="text/javascript">
        $(document).ready(function() {
            $('#guitarist').multiselect();
        });
    </script>

    <br />

    <input type="submit" />

</form>

<%- include("../includes/footer.ejs"); %>

</html>